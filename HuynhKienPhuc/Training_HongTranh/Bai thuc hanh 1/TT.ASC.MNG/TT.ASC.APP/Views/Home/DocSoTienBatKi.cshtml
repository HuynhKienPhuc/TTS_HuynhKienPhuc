
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DocSoTienBatKi</title>
    <style>
        div {
            text-align: center;
            font-size: 20px;
        }
    </style>
</head>
<body>
    
    <div>
        <h2>Đọc số tiền bất kỳ</h2>
        <form action="/Home/DocSoTienBatKi" method="post">
            <label for="sotien">Nhập vào số tiền: </label>
            <input type="text" name="sotien" />
            <input type="submit" value="Đọc" />
        </form><br />
        <label>@ViewBag.SoTien</label><br />
        <label>@ViewBag.KetQua</label>
    </div>
</body>
</html>
