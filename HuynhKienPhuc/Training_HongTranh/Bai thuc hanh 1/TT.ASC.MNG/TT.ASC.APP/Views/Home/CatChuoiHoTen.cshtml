
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CatChuoiHoTen</title>
    <style>
        div {
            text-align: center;
            font-size: 20px;
        }
    </style>
</head>
<body>
    
    <div>
        <h2>Tách ra họ và tên đệm khi một chuỗi họ tên được truyền vào</h2>
        <form action="/Home/CatChuoiHoTen" method="post">
            <label form="chuoihoten">Nhập vào họ và tên: </label>
            <input type="text" name="chuoihoten" />
            <input type="submit" value="Xác nhận" />
        </form><br />
        <label>@ViewBag.HoDem</label><br />
        <label>@ViewBag.Ten</label><br />
        <label>@ViewBag.ThongBao</label>
    </div>
</body>
</html>
