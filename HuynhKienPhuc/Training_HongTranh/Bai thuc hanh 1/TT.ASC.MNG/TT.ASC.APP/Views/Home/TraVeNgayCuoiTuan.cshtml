
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TraVeNgayCuoiTuan</title>
    <style>
        div {
            text-align: center;
            font-size: 20px;
        }
    </style>
</head>
<body>
    
    <div>
        <h2>Truyền vào ngày bất kì, trả về ngày cuối tuần</h2>
        <form action="/Home/TraVeNgayCuoiTuan" method="post">
            <label for="ngaybatki">Chọn ngày bất kì: </label>
            <input type="date" name="ngaybatki" />
            <input type="submit" value="Xác nhận" />
        </form><br />
        <label>@ViewBag.NgayDaChon</label><br />
        <label>@ViewBag.KetQua</label>
    </div>
</body>
</html>
